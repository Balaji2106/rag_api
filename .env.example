# .env.example
# Copy this to .env and fill in your values

# ============================================
# AZURE OPENAI - EMBEDDINGS
# ============================================
RAG_AZURE_OPENAI_API_KEY=CL8***Gidim
RAG_AZURE_OPENAI_ENDPOINT=https://ai-40mini.cognitiveservices.azure.com/
RAG_AZURE_OPENAI_API_VERSION=2024-12-01-preview
EMBEDDINGS_PROVIDER=azure
EMBEDDINGS_MODEL=text-embedding-3-small

# ============================================
# AZURE OPENAI - LLM (for chat responses)
# ============================================
# Provider options: azure, openai, google_genai, vertexai, ollama, bedrock
LLM_PROVIDER=azure
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1500

# ============================================
# ALTERNATIVE: OpenAI (uncomment to use)
# ============================================
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4o
# RAG_OPENAI_API_KEY=sk-...
# RAG_OPENAI_BASEURL=https://api.openai.com/v1

# ============================================
# ALTERNATIVE: Google GenAI (uncomment to use)
# ============================================
# LLM_PROVIDER=google_genai
# LLM_MODEL=gemini-pro
# RAG_GOOGLE_API_KEY=...

# ============================================
# ALTERNATIVE: Ollama (uncomment to use)
# ============================================
# LLM_PROVIDER=ollama
# LLM_MODEL=llama2
# OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# GUARDRAILS (Promptfoo Integration)
# ============================================
ENABLE_GUARDRAILS=true

# ============================================
# DATABASE
# ============================================
VECTOR_DB_TYPE=pgvector
POSTGRES_DB=mydatabase
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
DB_HOST=localhost
DB_PORT=5432
COLLECTION_NAME=testcollection

# ============================================
# RAG API SETTINGS
# ============================================
RAG_HOST=0.0.0.0
RAG_PORT=8000
DEBUG_RAG_API=false
CHUNK_SIZE=1500
CHUNK_OVERLAP=100
RAG_UPLOAD_DIR=./uploads/

# ============================================
# PROMPTFOO TESTING
# ============================================
RAG_API_URL=http://localhost:8000/chat
RAG_FILE_ID=alice_in_wonderland.txt

# ============================================
# OPTIONAL: JWT Security
# ============================================
# JWT_SECRET=your-secret-key-here

# ============================================
# OPTIONAL: Alternative Vector Stores
# ============================================
# For MongoDB Atlas
# VECTOR_DB_TYPE=atlas-mongo
# ATLAS_MONGO_DB_URI=mongodb://...
# ATLAS_SEARCH_INDEX=vector_index
